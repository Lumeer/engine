<arquillian xmlns="http://jboss.org/schema/arquillian" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://jboss.org/schema/arquillian http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

   <defaultProtocol type="Servlet 3.0"/>

   <engine>
      <property name="deploymentExportPath">target/deployments</property>
   </engine>

   <container qualifier="wildfly-remote" default="true">
      <configuration>
         <property name="managementAddress">127.0.0.1</property>
         <property name="managementPort">9990</property>
         <property name="username">admin</property>
         <property name="password">admin1234;</property>
      </configuration>
   </container>

   <container qualifier="wildfly-managed">
      <configuration>
         <property name="jbossHome">${project.build.directory}/wildfly-12.0.0.Final</property>
         <property name="javaVmArguments">-Xmx1g -Xms1g</property>
      </configuration>
   </container>

   <container qualifier="debug">
      <configuration>
         <property name="jbossHome">${project.build.directory}/wildfly-12.0.0.Final</property>
         <property name="javaVmArguments">-Xmx1024m -agentlib:jdwp=transport=dt_socket,server=y,suspend=n,address=5105</property>
      </configuration>
   </container>
</arquillian>
